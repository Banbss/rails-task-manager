<%= form_with model: @task do |f|  %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <% unless f.object.new_record? %>
  <%= f.label :completed %>
  <%= f.collection_radio_buttons :completed, [[true, 'Yes'], [false, 'No']], :first, :last %>
  <% end %>
  <%= f.submit %>
<% end %>
