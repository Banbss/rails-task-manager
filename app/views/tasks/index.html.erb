<h1>To-do</h1>

<ul>
<% @tasks.each do |task| %>
<li><%= link_to task["title"], task_path(task["id"]) %></li>
<%= link_to "Delete task", task_path(task),
data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{task["title"]}?"}
%>
<% end %>
</ul>
<br>
<%= link_to "Add a new task", new_task_path %>
